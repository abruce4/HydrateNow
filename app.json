{
  "expo": {
    "name": "Hydration Tracker: HydrateNow",
    "slug": "hydratenow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/HydrateNow.png",
    "scheme": "hydratenow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.abruce4.hydratenow",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera for [your reason]",
        "NSLocationWhenInUseUsageDescription": "This app uses location for [your reason]",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/HydrateNow.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.abruce4.hydratenow",
      "versionCode": 1,
      "permissions": [
        "NOTIFICATIONS"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/HydrateNow.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/HydrateNow.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-video",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "672943f6-6561-4bca-ae20-82432a35eb32"
      }
    },
    "owner": "abruce4"
  }
}
